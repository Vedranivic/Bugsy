<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/paddingFeed">
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/imageWidth"
        android:layout_height="@dimen/imageHeight"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/tvTitle"
        android:layout_marginStart="@dimen/marginStartItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopItem"
        android:textSize="@dimen/TitleSize"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:layout_toEndOf="@+id/ivImage"

        />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/CategorySize"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:layout_toEndOf="@+id/ivImage"
        android:layout_below="@+id/tvTitle"
        />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_marginStart="@dimen/marginStartItem"
        android:layout_marginTop="@dimen/marginTopItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:textSize="@dimen/DescSize"
        android:textColor="@color/colorText"
        android:layout_toEndOf="@+id/ivImage"
        android:layout_below="@+id/tvCategory"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dateSize"
        android:textStyle="bold"
        android:textColor="@color/colorDesc"
        android:layout_below="@+id/tvDescription"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>